<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:scrollbarSize="0dp"
    android:scrollbarThumbVertical="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/flLogoHome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred"
            android:background="@color/green_pri">

            <ImageView
                android:id="@+id/ivLogoHome"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_five"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo_regent_white"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/fifteen"
            android:paddingEnd="@dimen/fifteen"
            android:paddingLeft="@dimen/fifteen"
            android:paddingRight="@dimen/fifteen"
            android:paddingStart="@dimen/fifteen">

            <com.codepan.widget.CodePanLabel
                android:id="@+id/tvStoreHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:background="@drawable/bg_rect_black_trans_forty_rad_three"
                android:gravity="center"
                android:padding="@dimen/five"
                android:textColor="@color/white"
                android:textSize="@dimen/seventeen"
                codePan:typeface="@string/proxima_nova_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:background="@drawable/bg_rect_white_rad_five"
                android:orientation="vertical"
                android:visibility="gone">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rect_blue_pri_rad_top_five"
                    android:gravity="center"
                    android:paddingBottom="@dimen/twelve"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight"
                    android:paddingTop="@dimen/twelve"
                    android:text="@string/inventory"
                    android:textColor="@color/white"
                    android:textSize="@dimen/seventeen"
                    codePan:typeface="@string/proxima_nova_bold"/>

                <LinearLayout
                    android:id="@+id/llInventoryHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/fifty"
                    android:orientation="vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen"
                android:background="@drawable/bg_rect_white_rad_five"
                android:orientation="vertical">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rect_blue_pri_rad_top_five"
                    android:gravity="center"
                    android:paddingBottom="@dimen/twelve"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight"
                    android:paddingTop="@dimen/twelve"
                    android:text="@string/app_forms"
                    android:textColor="@color/white"
                    android:textSize="@dimen/seventeen"
                    codePan:typeface="@string/proxima_nova_bold"/>

                <LinearLayout
                    android:id="@+id/llFormHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/fifty"
                    android:orientation="vertical"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>