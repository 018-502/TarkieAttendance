<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlHeaderAddClient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header"
        android:layout_alignParentTop="true"
        android:background="@color/header">

        <FrameLayout
            android:layout_width="@dimen/header"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="@dimen/eighteen"
                android:layout_height="@dimen/sixteen"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"/>

            <com.codepan.widget.CodePanButton
                android:id="@+id/btnBackStoreDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/state_rect_trans_dark"/>

        </FrameLayout>

        <com.codepan.widget.CodePanLabel
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/add_store"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen"
            codePan:typeface="@string/proxima_nova_light"/>

        <com.codepan.widget.CodePanButton
            android:id="@+id/btnHeaderSave"
            android:layout_width="@dimen/fifty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="@drawable/state_rect_white_rad_three"
            android:text="@string/save_caps"
            android:textColor="@color/header"
            android:textSize="@dimen/fourteen"
            codePan:typeface="@string/proxima_nova_light"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llFooterBtns"
        android:layout_below="@+id/rlHeaderAddClient"
        android:layout_marginBottom="@dimen/ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_five"
                android:orientation="horizontal">

                <com.codepan.widget.CodePanLabel
                    android:id="@+id/tvCompName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/thirteen"
                    android:layout_marginStart="@dimen/thirteen"
                    android:text="@string/company_name"
                    android:textSize="@dimen/seventeen"/>

                <com.codepan.widget.CodePanTextField
                    android:id="@+id/tfCompName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginStart="@dimen/five"
                    android:background="@drawable/state_rect_gray_sec_rad_three"
                    android:hint="@string/name_hint"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_hundred_twenty"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="@dimen/one_hundred_twenty_five"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/twenty"
                    android:paddingLeft="@dimen/fifteen"
                    android:paddingStart="@dimen/fifteen"
                    android:text="@string/address"
                    android:textSize="@dimen/seventeen"/>

                <com.codepan.widget.CodePanTextField
                    android:id="@+id/tfAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ninety"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/state_rect_gray_sec_rad_three"
                    android:gravity="top"
                    android:hint="@string/address_hint"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight"
                    android:paddingTop="5dp"
                    codePan:typeface="@string/proxima_nova_light"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_hundred_five"
                android:orientation="vertical">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginStart="@dimen/fifteen"
                    android:layout_marginTop="@dimen/twenty"
                    android:text="@string/share_with"
                    android:textSize="@dimen/seventeen"
                    codePan:typeface="@string/proxima_nova_light"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/twenty"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbMe"
                        android:layout_width="@dimen/thirteen"
                        android:layout_height="@dimen/thirteen"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/five"
                        android:layout_marginRight="@dimen/five"
                        android:background="@drawable/state_bmp_box"
                        android:button="@null"
                        android:clickable="true"
                        android:focusable="false"/>

                    <com.codepan.widget.CodePanLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/seventy_five"
                        android:layout_marginRight="@dimen/seventy_five"
                        android:text="@string/me"
                        android:textSize="@dimen/seventeen"/>

                    <CheckBox
                        android:id="@+id/cbTeam"
                        android:layout_width="@dimen/thirteen"
                        android:layout_height="@dimen/thirteen"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/five"
                        android:layout_marginRight="@dimen/five"
                        android:background="@drawable/state_bmp_box"
                        android:button="@null"
                        android:clickable="true"
                        android:focusable="false"/>

                    <com.codepan.widget.CodePanLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_team"
                        android:textSize="@dimen/seventeen"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llFooterBtns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/thirty"
        android:orientation="horizontal">

        <com.codepan.widget.CodePanButton
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/one_hundred_twenty"
            android:layout_height="@dimen/forty_five"
            android:layout_marginEnd="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="@drawable/state_rect_gray_qui_rad_five"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/seventeen"
            codePan:typeface="@string/proxima_nova_bold"/>

        <com.codepan.widget.CodePanButton
            android:id="@+id/btnSave"
            android:layout_width="@dimen/one_hundred_twenty"
            android:layout_height="@dimen/forty_five"
            android:background="@drawable/state_rect_green_pri_rad_five"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/seventeen"
            codePan:typeface="@string/proxima_nova_bold"/>

    </LinearLayout>

</RelativeLayout>