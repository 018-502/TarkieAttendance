<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/twelve"
        android:paddingEnd="@dimen/ten"
        android:paddingLeft="@dimen/ten"
        android:paddingRight="@dimen/ten"
        android:paddingStart="@dimen/ten"
        android:paddingTop="@dimen/twelve">

        <com.codepan.widget.CodePanLabel
            android:id="@+id/tvNameAddVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvStartAddVisit"
            android:layout_toStartOf="@+id/tvStartAddVisit"
            android:text="@string/stores"
            android:textColor="@color/gray_pri"
            android:textSize="@dimen/seventeen"
            codePan:typeface="@string/proxima_nova_semi_bold"/>

        <com.codepan.widget.CodePanLabel
            android:id="@+id/tvStartAddVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvToAddVisit"
            android:layout_toStartOf="@+id/tvToAddVisit"
            android:text="@string/end_date"
            android:textColor="@color/blue_pri"
            android:textSize="@dimen/seventeen"
            codePan:typeface="@string/proxima_nova_semi_bold"/>

        <com.codepan.widget.CodePanLabel
            android:id="@+id/tvToAddVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/five"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:layout_marginStart="@dimen/five"
            android:layout_toLeftOf="@+id/tvEndAddVisit"
            android:layout_toStartOf="@+id/tvEndAddVisit"
            android:text="@string/to"
            android:textColor="@color/gray_pri"
            android:textSize="@dimen/seventeen"
            codePan:typeface="@string/proxima_nova_semi_bold"/>

        <com.codepan.widget.CodePanLabel
            android:id="@+id/tvEndAddVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/end_date"
            android:textColor="@color/green_pri"
            android:textSize="@dimen/seventeen"
            codePan:typeface="@string/proxima_nova_semi_bold"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="@color/divider"/>

</LinearLayout>