<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/state_rect_trans_dark"
    android:paddingBottom="@dimen/fifteen"
    android:paddingEnd="@dimen/ten"
    android:paddingLeft="@dimen/ten"
    android:paddingRight="@dimen/ten"
    android:paddingStart="@dimen/ten"
    android:paddingTop="@dimen/fifteen">

    <com.codepan.widget.CodePanLabel
        android:id="@+id/tvDateAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/gray_pri"
        android:textSize="@dimen/seventeen"
        codePan:typeface="@string/proxima_nova_light"/>

    <com.codepan.widget.CodePanLabel
        android:id="@+id/tvTimeAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/seven"
        android:layout_marginRight="@dimen/seven"
        android:layout_toLeftOf="@+id/ivNextAttendance"
        android:layout_toStartOf="@+id/ivNextAttendance"
        android:textColor="@color/gray_pri"
        android:textSize="@dimen/seventeen"
        codePan:typeface="@string/proxima_nova_light"/>

    <ImageView
        android:id="@+id/ivNextAttendance"
        android:layout_width="@dimen/seven"
        android:layout_height="@dimen/fifteen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_next_dark"/>

</RelativeLayout>