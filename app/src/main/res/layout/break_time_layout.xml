<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageView
        android:id="@+id/ivBreakTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_trans_forty">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.codepan.widget.CodePanLabel
                android:id="@+id/tvTitleBreakTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM Break"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_seven"
                codePan:typeface="@string/proxima_nova_bold"/>

            <ImageView
                android:layout_width="@dimen/seventy_nine"
                android:layout_height="@dimen/eighty_three"
                android:layout_marginTop="@dimen/fifty"
                android:src="@drawable/ic_coffee"/>

            <com.codepan.widget.CodePanLabel
                android:id="@+id/tvDurationBreakTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/thirteen"
                android:gravity="center"
                android:text="You are currently on\nAM break. (15 mins)"
                android:textColor="@color/white"
                android:textSize="@dimen/eighteen"
                codePan:typeface="@string/proxima_nova_light"/>

            <com.codepan.widget.CodePanLabel
                android:id="@+id/tvCurrentBreakTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/thirty_five"
                android:layout_marginTop="@dimen/thirty_five"
                android:text="7m left"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_seven"
                codePan:typeface="@string/proxima_nova_bold"/>

            <com.codepan.widget.CodePanLabel
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/press_done"
                android:textColor="@color/white"
                android:textSize="@dimen/eighteen"
                codePan:typeface="@string/proxima_nova_light"/>

            <com.codepan.widget.CodePanButton
                android:id="@+id/btnDoneBreakTime"
                android:layout_width="@dimen/one_hundred_twenty"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:background="@drawable/state_rect_green_pri_rad_five"
                android:padding="@dimen/ten"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/eighteen"
                codePan:typeface="@string/proxima_nova_bold"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>