<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_pri"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivLogoSplash"
            android:layout_width="@dimen/one_hundred"
            android:layout_height="@dimen/seventy_seven"
            android:src="@drawable/ic_logo"/>

        <com.codepan.widget.CodePanLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sevie"
            android:textColor="@color/white"
            android:textSize="@dimen/thirty_five"
            codePan:typeface="@string/nexa_book_mid"/>

    </LinearLayout>

</RelativeLayout>