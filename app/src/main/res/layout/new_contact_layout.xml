<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlHeaderContacts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header"
        android:layout_alignParentTop="true"
        android:background="@color/header">

        <FrameLayout
            android:layout_width="@dimen/header"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="@dimen/eighteen"
                android:layout_height="@dimen/sixteen"
                android:layout_gravity="center"
                android:src="@drawable/ic_back" />

            <com.codepan.widget.CodePanButton
                android:id="@+id/btnBackContacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/state_rect_trans_dark" />

        </FrameLayout>

        <com.codepan.widget.CodePanLabel
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/new_contact_title"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen"
            codePan:typeface="@string/proxima_nova_light" />

        <com.codepan.widget.CodePanButton
            android:id="@+id/btnAddContact"
            android:layout_width="@dimen/fifty_five"
            android:layout_height="@dimen/twenty_five"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginEnd="@dimen/ten"
            android:background="@drawable/state_rect_white_rad_three"
            android:text="@string/save_caps"
            android:textColor="@color/header"
            android:textSize="@dimen/fourteen"
            codePan:typeface="@string/proxima_nova_light" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_five"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.codepan.widget.CodePanLabel
                    android:id="@+id/lblName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginStart="@dimen/fifteen"
                    android:text="@string/name"
                    android:textSize="@dimen/seventeen" />

                <com.codepan.widget.CodePanTextField
                    android:id="@+id/tfName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginStart="@dimen/five"
                    android:background="@drawable/state_rect_gray_sec_rad_three"
                    android:hint="@string/name_hint"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_five"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="@dimen/one_hundred_twenty_five"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/fifteen"
                    android:paddingStart="@dimen/fifteen"
                    android:text="@string/designation"
                    android:textSize="@dimen/seventeen" />

                <com.codepan.widget.CodePanTextField
                    android:id="@+id/tfDesignation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/state_rect_gray_sec_rad_three"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_five"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="@dimen/one_hundred_twenty_five"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/fifteen"
                    android:paddingStart="@dimen/fifteen"
                    android:text="@string/mobile"
                    android:textSize="@dimen/seventeen" />

                <com.codepan.widget.CodePanTextField
                    android:id="@+id/tfMobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/state_rect_gray_sec_rad_three"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_five"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="@dimen/one_hundred_twenty_five"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/fifteen"
                    android:paddingStart="@dimen/fifteen"
                    android:text="@string/tel"
                    android:textSize="@dimen/seventeen" />

                <com.codepan.widget.CodePanTextField
                    android:id="@+id/tfTel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/state_rect_gray_sec_rad_three"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_five"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="@dimen/one_hundred_twenty_five"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/fifteen"
                    android:paddingStart="@dimen/fifteen"
                    android:text="@string/email"
                    android:textSize="@dimen/seventeen" />

                <com.codepan.widget.CodePanTextField
                    android:id="@+id/tfEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/state_rect_gray_sec_rad_three"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_five"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="@dimen/one_hundred_twenty_five"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/fifteen"
                    android:paddingStart="@dimen/fifteen"
                    android:text="@string/birthday"
                    android:textSize="@dimen/seventeen" />

                <com.codepan.widget.CodePanTextField
                    android:id="@+id/tfBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_five"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/state_rect_gray_sec_rad_three"
                    android:hint="@string/birthday_hint"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_hundred_twenty"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.codepan.widget.CodePanLabel
                    android:layout_width="@dimen/one_hundred_twenty_five"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/twenty"
                    android:paddingLeft="@dimen/fifteen"
                    android:paddingStart="@dimen/fifteen"
                    android:text="@string/remarks"
                    android:textSize="@dimen/seventeen" />

                <com.codepan.widget.CodePanTextField
                    android:id="@+id/tfRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ninety"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@drawable/state_rect_gray_sec_rad_three"
                    android:gravity="top"
                    android:hint="@string/remarks_hint"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/eight"
                    android:paddingLeft="@dimen/eight"
                    android:paddingRight="@dimen/eight"
                    android:paddingStart="@dimen/eight"
                    android:paddingTop="5dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@color/gray_sec" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>