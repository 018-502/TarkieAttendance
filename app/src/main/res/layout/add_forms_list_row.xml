<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/twelve">

    <com.codepan.widget.CodePanLabel
        android:id="@+id/tvNameAddForms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/cbAddForms"
        android:layout_toStartOf="@+id/cbAddForms"
        android:text="@string/forms"
        android:textColor="@color/gray_pri"
        android:textSize="@dimen/seventeen"
        codePan:typeface="@string/proxima_nova_light"/>

    <CheckBox
        android:id="@+id/cbAddForms"
        android:layout_width="@dimen/twenty"
        android:layout_height="@dimen/twenty"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/state_bmp_box"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"/>

</RelativeLayout>