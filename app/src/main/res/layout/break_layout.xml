<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codePan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:clickable="true"
    android:padding="@dimen/fifteen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/fifteen"
        android:background="@drawable/bg_rect_white_rad_five"
        android:minHeight="@dimen/ninety"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/twelve"
            android:paddingEnd="@dimen/eight"
            android:paddingLeft="@dimen/eight"
            android:paddingRight="@dimen/eight"
            android:paddingStart="@dimen/eight"
            android:paddingTop="@dimen/twelve">

            <ImageView
                android:layout_width="@dimen/twenty_seven"
                android:layout_height="@dimen/twenty_five"
                android:layout_marginTop="@dimen/negative_three"
                android:src="@drawable/ic_break"/>

            <com.codepan.widget.CodePanLabel
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/eight"
                android:layout_marginStart="@dimen/eight"
                android:text="@string/breaks_caps"
                android:textColor="@color/gray_pri"
                android:textSize="@dimen/seventeen"
                codePan:typeface="@string/proxima_nova_light"/>

        </LinearLayout>

        <View
            android:id="@+id/vDividerBreak"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:background="@color/gray_sec"/>

        <ListView
            android:id="@+id/lvBreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/gray_sec"
            android:dividerHeight="@dimen/one"
            android:listSelector="@color/transparent"
            android:scrollbarSize="0dp"
            android:scrollbarThumbVertical="@color/transparent"/>

    </LinearLayout>

</RelativeLayout>